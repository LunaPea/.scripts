#!/bin/sh

echo  				>> ~/Downloads/aria2c/LOG
echo \# 			>> ~/Downloads/aria2c/LOG
echo \# $(date) 	>> ~/Downloads/aria2c/LOG
echo \# magnet: $@ 	>> ~/Downloads/aria2c/LOG
echo \# 			>> ~/Downloads/aria2c/LOG
echo  				>> ~/Downloads/aria2c/LOG

kitty aria2c "$@" --bt-save-metadata --bt-prioritize-piece=head --on-bt-download-complete="notify-send 'Download complete'" --dir ~/Downloads/aria2c/ --log ~/Downloads/aria2c/LOG
